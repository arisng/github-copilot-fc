{
    "servers": {
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "${env:USERPROFILE}/.claude/skills",
                "${env:APPDATA}/Code/User/prompts",
                "${input:workspaceFolder}"
            ]
        },
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "env": {
                "MEMORY_FILE_PATH": "${workspaceFolder}/.github/memory.json"
            },
            "type": "stdio"
        }
    },
    "inputs": [
        {
            "type": "promptString",
            "id": "workspaceFolder",
            "description": "Current Workspace Folder",
            "password": false
        }
    ]
}